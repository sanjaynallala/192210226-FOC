#include <stdio.h>

int main() {
    int num, sum = 0;

    // Input the integer number
    printf("Enter an integer number: ");
    scanf("%d", &num);

    // Calculate the sum of digits
    while (num != 0) {
        sum += num % 10;
        num /= 10;
    }

    // Display the result
    printf("Sum of the digits is: %d\n", sum);

    return 0;
}
